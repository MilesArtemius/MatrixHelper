<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:id="@+id/creative_layout"
        android:layout_weight="0.55"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/nameView"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center"
            android:text="This app helps you to draw a matrix \n WITH EASE" />

        <TextView
            android:id="@+id/textView"
            android:layout_weight="0.20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Custom matrix properties:" />

        <EditText
            android:id="@+id/custom_matrix_width"
            android:layout_weight="0.15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="Number of matrix rows"
            android:inputType="number" />

        <EditText
            android:id="@+id/custom_matrix_height"
            android:layout_weight="0.15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText"
            android:hint="Number of matrix columns"
            android:inputType="number" />
    </LinearLayout>

    <Button
        android:id="@+id/creative_button"
        android:layout_weight="0.15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Draw custom matrix" />

    <Button
        android:id="@+id/crt2button"
        android:layout_weight="0.15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Draw matrix 2x2" />

    <Button
        android:id="@+id/crt3button"
        android:layout_weight="0.15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Draw matrix 3x3" />
</LinearLayout>
